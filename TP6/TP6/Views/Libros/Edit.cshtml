@model TP6.Models.Libro

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Libro</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        @Html.HiddenFor(model => model.Titulo)

        @Html.HiddenFor(model => model.Autor)

        @Html.HiddenFor(model => model.Paginas)

        @Html.HiddenFor(model => model.ISBN)

        @Html.HiddenFor(model => model.Edicion)

        @Html.HiddenFor(model => model.Editorial)

        @Html.HiddenFor(model => model.Lugar)

        @Html.HiddenFor(model => model.FechaEdicion)

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
